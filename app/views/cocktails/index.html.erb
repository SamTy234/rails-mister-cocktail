
<div class="banner" >
  <div class="banner-content">
    <div class="content">
      <h1>Beverokart selector</h1>
      <%=link_to new_cocktail_path do %>
      <div class="btn btn-primary text-center">Create</div>
      <% end %>
    </div>
  </div>
</div>




<div class="container">
  <div class="row">
    <%@cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo?   %>
          <div class="card card-description" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 500, width: 500, crop: :fill %>')">
            <h2><%= cocktail.name %></h2>
            <%= link_to cocktail_path(cocktail), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
            <%= link_to "", cocktail_path(cocktail), class: "card-link"  %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

