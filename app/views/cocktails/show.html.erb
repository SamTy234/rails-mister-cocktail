<div class="container" style="background-image: linear-gradient(rgba(0,0,0,0.3),
          rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, crop: :fill; %>')">
  <div class="cocktail-details">
    <h1><%= "Details for #{@cocktail.name}" %></h1>
    <h4><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)  %></h4>
    <div class="doses">
      <% @cocktail.doses.each  do |dose| %>   <!-- this is possible because Has many doses -->
        <li>
          <%= "Dosage: #{dose.description} | Ingredient: #{dose.ingredient.name}" %>
          <%= link_to "Delete", dose_path(dose), method: :delete  %>
        </li>
      <% end %>
    </div>
    <h3><%= link_to "Back", cocktails_path  %></h3>
  </div>
</div>
